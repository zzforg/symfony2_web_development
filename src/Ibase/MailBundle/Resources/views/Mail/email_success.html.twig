{% extends '::base.html.twig' %}
{% block header %}
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
{% endblock %}
{% block body %}
<body style="background:#F6F6F6; font-family:Verdana, Arial, Helvetica, sans-serif; font-size:12px; margin:0; padding:0;">
    <div style="background:#F6F6F6; font-family:Verdana, Arial, Helvetica, sans-serif; font-size:12px; margin:0; padding:0;">
        <table cellspacing="0" cellpadding="0" border="0" width="100%">
            <tr>
                <img src="{{logo}}" alt="Ibase Trading" width="310" height="150" />
            </tr>
            <tr>
                <td align="center" valign="top" style="padding:20px 0 20px 0">
                    <table bgcolor="#FFFFFF" cellspacing="0" cellpadding="10" border="0" width="650" style="border:1px solid #E0E0E0;">
                        <tr>
                            <th>Congradulations!</th>
                        </tr>
                        <tr>
                            <td valign="top">
                                <p>Dear {{fName}}:</p>
                                {% set order = '100000' %}
                                {% set order = "#{order + orderNum.getId}" %}
                                <p>
                                    Thanks for shopping on Ibase Trading online
                                    store. Here is your order number:{{order}}.
                                </p>
                                <table width="100%" border="1">
                                    <tr>
                                        <th>Item#</th>
                                        <th>Item title</th>
                                        <th>Qty</th>
                                        <th>Price</th>
                                    </tr>
                                    {% for i in 0..products|length-1 %}
                                    <tr>
                                        <td style="text-align:center;vertical-align:middle;">{{products[i].getModel}}</td>
                                        <td style="text-align:center;vertical-align:middle;">{{products[i].name}}</td>
                                        <td style="text-align:center;vertical-align:middle;">{{qty[i]}}</td>
                                        <td style="text-align:center;vertical-align:middle;">${{products[i].price}}</td>
                                    </tr>
                                    {% endfor %}
                                    <tr>
                                        <td colspan="4" style="text-align:center;vertical-align:middle;">
                                            <strong>Total:${{orderNum.getTotalAmount}}</strong>
                                        </td>
                                    </tr>
                                    
                                </table>
                                <br />
                                <p>Kind Regards,</p>
                                <p>Ibase Trading Pty Ltd.</p>
                                <br />
                                <p>Contact</p>
                                <p>Email:support@ibase-trading.com</p>
                                <p>Â© Copyright 2014, Ibase.com</p>
                                <p style="font-size:12px; line-height:16px; margin:0;">
                                </p>
                                <div id="map">
                                    <img src="{{map}}" alt="location" width="300" height="300" />
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
       </table>
    </div>
</body>
{% endblock%}
{% block footer %}{% endblock %}
