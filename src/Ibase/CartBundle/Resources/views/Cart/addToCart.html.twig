{% extends '::base.html.twig' %}
{% block header %}
    {{parent()}}
    {% stylesheets 'bundles/ibasecart/css/cart.css'  filter="cssrewrite" %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block title %}Ibase Cart:AaddToCart{% endblock %}

