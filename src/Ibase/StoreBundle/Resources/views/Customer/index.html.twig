{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Customer list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Street</th>
                <th>Town</th>
                <th>State</th>
                <th>Country</th>
                <th>Postcode</th>
                <th>Contact</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('Customer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.town }}</td>
                <td>{{ entity.state }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.postcode }}</td>
                <td>{{ entity.contact }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('Customer_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('Customer_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('Customer_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
