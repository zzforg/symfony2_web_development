{% extends '::ibaseAdmin.html.twig' %}
{% block section -%}
    <h3>{{entity.customer}}</h3>

    <table  class="table" >
        <tbody class="table-bordered">
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Delivery_fee</th>
                <td>{{ entity.deliveryfee }}</td>
            </tr>
            <tr>
                <th>Total_amount</th>
                <td>{{ entity.totalamount }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Tracking Number</th>
                <td>{{ entity.trackingnumber }}</td>
            </tr>
            <tr>
                <th>Carrier</th>
                <td>{{ entity.carrier }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('Purchase') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('Purchase_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
