 <div class="modal-body">
          {{form_start(edit_form)}}
            <div class="form-group">
             {{form_label(edit_form.tracking_number)}}{{form_widget(edit_form.tracking_number, {'attr':{'class': 'form-control'} })}}
             </div>
             <div class="form-group">
             {{form_label(edit_form.carrier)}}{{form_widget(edit_form.carrier, {'attr': {'class': 'form-control'} })}}
             </div>
             <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                {{form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-primary'} }) }}
             </div>    
             <div style="display:none">{{form_rest(edit_form)}}</div>
          {{form_end(edit_form)}}
 </div>