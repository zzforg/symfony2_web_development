                                  <button type="submit" class="btn btn-small">Search</button>
                                </div>            
                            </form>
                        </div>
                        {%endblock%}#}
                <!--bar ends -->
                {% block cartBtn %}
                <div class="dropdown" id="cartBtn">
                    <a data-toggle="dropdown" class="btn btn-lg" 
                               role="button" href="#">
                       <span class="badge pull-right">{{ cart|length }}</span>
                       <img src="{{asset('images/icons/shopping cart.png')}}" 
                             alt="Shopping Cart"
                             width="35"
                             height="35"/> 
                    </a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                        <li>
                            {{ render(controller('IbaseCartBundle:Cart:renderCart')) }}
                        </li>
                        <li>
                            <a href="{{ path('ibase_list_cart') }}" 
                               class="btn btn-danger btn-lg" 
                               role="button">
                                Check out
                            </a>
                        </li>
                    </ul>
               </div>
               {% endblock %}
