            src="{{ asset('js/jquery-1.8.3.min.js') }}"></script>#}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <!--This section gets records from session -->
    {% set cart = app.session.get('cart') %}
    <body>
        <div id='container'>
            <div id="header">
            {% block header %}
                <div id="head_img">
                    <a href="{{ path('ibase_home') }}">
                        <img src="{{asset('images/ibase_logo.jpg')}}" 
                             alt="ibase Trading" height="100"/>
                    </a>
                </div>
                <!-- navigation bar-->
                {% block menuBar%}
                    {% render url('render_menu') %}
                {% endblock %}
                {#                        {% block searchbar %}
                        <div class='navbar-collapse collapse'>
